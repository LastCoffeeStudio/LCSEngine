    //code
    break;
}

//Magic numbers
forbiden use of numbers inside the conditions (use defines!)

//Class sample (functions on cpp are order like their position on the header)
class A
{
  public:
    void foo();
  public:
    int a;
    
  private:
    void fuu();
  private:
    int b;
}

//Between two functions endline;
void foo() {}

void fuu() {}

